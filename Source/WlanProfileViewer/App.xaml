<Application x:Class="WlanProfileViewer.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:converters="clr-namespace:WlanProfileViewer.Views.Converters">
	<Application.Resources>
		<ResourceDictionary>
			<!-- Converters -->
			<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverterKey"/>
			<converters:VisibilityInverseConverter x:Key="VisibilityInverseConverterKey"/>

			<!-- Styles, Templates -->
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Views/Styles/CustomTheme.xaml"/>
				<ResourceDictionary Source="/Views/Styles/CustomControls.xaml"/>
				<ResourceDictionary Source="/Views/Styles/CommonControls.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>