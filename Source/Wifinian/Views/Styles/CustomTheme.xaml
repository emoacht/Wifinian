<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Color x:Key="App.ForegroundColor">White</Color>
	<Color x:Key="App.ShadowColor">LightGray</Color>

	<SolidColorBrush x:Key="App.Foreground" Color="{StaticResource App.ForegroundColor}"/>
	<SolidColorBrush x:Key="App.Foreground.Shadow" Color="{StaticResource App.ShadowColor}"/>

	<SolidColorBrush x:Key="App.Background.Plain" Color="#FF424242"/>
	<SolidColorBrush x:Key="App.Background.Translucent" Color="#CC171717"/>
	<SolidColorBrush x:Key="App.Background.Hidden" Color="Black" Opacity="0.4"/>
	<SolidColorBrush x:Key="App.Background.Attention" Color="Firebrick"/>

	<Color x:Key="Profile.Background.NormalColor">#02FFFFFF</Color>
	<Color x:Key="Profile.Background.NormalSelectedColor">#10FFFFFF</Color>
	<!--<Color x:Key="Profile.Background.AvailableColor">#CC0A4394</Color>-->
	<Color x:Key="Profile.Background.AvailableColor">#FF3B69A9</Color>
	<Color x:Key="Profile.Background.AvailableSelectedColor">Transparent</Color>
	<!--<Color x:Key="Profile.Background.ConnectedColor">#CC3079BD</Color>-->
	<Color x:Key="Profile.Background.ConnectedColor">#FF5994CA</Color>
	<Color x:Key="Profile.Background.ConnectedSelectedColor">Transparent</Color>

	<SolidColorBrush x:Key="Profile.Background.Normal" Color="{StaticResource Profile.Background.NormalColor}"/>

	<Color x:Key="ScrollBar.Thumb.NormalColor">#33BCBCBC</Color>
	<Color x:Key="ScrollBar.Thumb.MouseOverColor">#33EFEFEF</Color>

	<SolidColorBrush x:Key="Text.Border.Writable" Color="{StaticResource App.ForegroundColor}"/>
	<SolidColorBrush x:Key="Text.Background.Writable" Color="#FF5F5F5F"/>

	<SolidColorBrush x:Key="Signal.Foreground" Color="{StaticResource App.ForegroundColor}" Opacity="1.0"/>
	<SolidColorBrush x:Key="Signal.Background" Color="{StaticResource App.ForegroundColor}" Opacity="0.25"/>

	<SolidColorBrush x:Key="Button.Foreground" Color="{StaticResource App.ForegroundColor}" Opacity="0.8"/>

	<Color x:Key="ToggleButton.Background.CheckedColor">#FF7FC5FF</Color>

	<SolidColorBrush x:Key="ToggleButton.Foreground.Normal" Color="{StaticResource App.ForegroundColor}" Opacity="0.6"/>
	<SolidColorBrush x:Key="ToggleButton.Background.Normal" Color="#FF272727"/>

	<SolidColorBrush x:Key="Menu.Separator" Color="#FF808080"/>
	<SolidColorBrush x:Key="Menu.Item.Background.Normal" Color="Transparent"/>
	<SolidColorBrush x:Key="Menu.Item.Background.MouseOver" Color="#FF5F5F5F"/>

</ResourceDictionary>